<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>Books</servlet-name>
        <servlet-class>Servlets.BookServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Books</servlet-name>
        <url-pattern>/books</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Authors</servlet-name>
        <servlet-class>Servlets.AuthorServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Authors</servlet-name>
        <url-pattern>/authors/list</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>Authors</servlet-name>
        <url-pattern>/authors/select</url-pattern>
    </servlet-mapping>
</web-app>
